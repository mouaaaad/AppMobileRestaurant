<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuStructureActivity"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@drawable/rounded_edge"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nom_plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dip"
            android:layout_marginLeft="270dip"
            android:layout_marginTop="20dip"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prix_plat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="283dp"
            android:layout_marginRight="283dp"
            android:layout_marginBottom="3dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/prix_plat"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="270dip"
            android:layout_marginLeft="270dip"
            android:layout_marginBottom="20dip"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold"
       />

        <ImageView
            android:id="@+id/image_plat"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dip"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="0dip"
            tools:srcCompat="@tools:sample/avatars" />
    </RelativeLayout>
</LinearLayout>